<div class="login">
<div class="card">
  <div class="card-block">
    <h3 class="card-title">Sign Up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="row">
          <div class="col-md-12">
          <div class="form-group">
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
              <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "Username" %>
            </div>
            
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
              <%= f.email_field :email, class:"form-control", placeholder:"email" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="input-group margin-bottom-sm">
            
              <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
              <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "Password: 6 character minimum" %>
            </div>
          
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-check fa-fw" aria-hidden="true"></i></span>
              <%= f.password_field :password_confirmation, class:"form-control", placeholder:"password confirmation", autocomplete: "off" %>
            </div> 
          </div>
          
          <div class="actions">
            <%= f.submit "Sign up", class:'btn btn-primary btn-block' %>
          </div>
        <% end %>
        <div class="auth-links">
          or <%= render "devise/shared/links" %>
        </div>
        
      </div>
</div>
</div>
          
          




