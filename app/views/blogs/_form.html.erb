<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class:'form-control', placeholder: 'title' %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, rows: 15, class:'form-control', placeholder: 'content' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-outline-success' %>
  </div>
<% end %>
