</p>



<p>
  <%= @blog.body %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog), class:'btn btn-outline-info btn-sm' if logged_in?(:site_admin) %>
<%= link_to 'Delete', blogs_path(@blog), class:'btn btn-outline-danger btn-sm' if logged_in?(:site_admin) %> 

<br >
<hr >

<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class:'form-control' %>
    </div>
      <%= f.submit 'Post Comment', class:'btn btn-primary' %>
  <% end %>
<% end %>

<%= render @blog.comments %>