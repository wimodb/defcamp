

<%= form_for(portfolio_item) do |f| %>
  
<div class="row">
  <div class="col-md-6">
     <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows:12, class:'form-control' %>
    </div>
  
  </div>
  
  <div class="col-md-6">
    <div class="portfolio-container">
      
      <div class="form-group">
        <label class="btn btn-outline-info btn-sm btn-block">
          Upload a main image file <%= f.file_field :main_image, style: 'display: none;' %>
        </label>
        
      </div>
      
      <div class="form-group">
        <label class="btn btn-outline-info btn-sm btn-block">
          Upload a thumb image file <%= f.file_field :thumb_image, style: 'display: none;' %>
        </label>
      </div>
      
      <h3>Technologies used</h3>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
      
      <div>
        <br>
        <%= link_to_add_association 'Add Technology', f, :technologies, class:'btn btn-info btn-sm' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="actions">
      <%= f.submit 'Save portfolio_item', class:'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
 
<% end %>
