

<%= form_for(portfolio_item) do |f| %>
  
<div class="row">
  <div class="col-md-6">
     <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows:12, class:'form-control' %>
    </div>
  
  </div>
  
  <div class="col-md-6">
    <div>
      <h3 class="portfolio-form">Technologies used</h3>
      <%= f.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class:'form-control' %>
      </div>
  
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="actions">
      <%= f.submit 'Save portfolio_item', class:'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
 
<% end %>
