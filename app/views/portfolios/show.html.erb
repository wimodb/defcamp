<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-12 col-lg-7">
      <%= image_tag @portfolio_item.main_image, width: '100%' %>
     </div>
    
    <div class="col-md-12 col-lg-5">
      <h1><%= @portfolio_item.title %></h1>
      
      <hr>
      
      <em><%= @portfolio_item.subtitle %></em>
      
      <p><%= @portfolio_item.body %></p>
      
      <hr >
      
      <% if @portfolio_item.technologies.count > 0 %>
        <h2>Technologies used</h2>
        <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
        <% end %>
      <% end %>
      
       
      <%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> |
      <%= link_to "Delete", portfolio_path(@portfolio_item), method: :delete, data:{ confirm: 'are you sure?'} if logged_in?(:site_admin)  %>
      

    </div>
  </div>
</div>

