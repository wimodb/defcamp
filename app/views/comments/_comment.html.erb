<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
      <div class="col-md-1">
        <%= gravatar_helper comment.user %>
      </div>
      <div class="col-md-11">
        <p><%= comment.content %></p>
        <small class="comment-footnote">comment by <span class="comment-name"><%= comment.user.name %></span> <%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
      </div>
    </div>
  </div>
</div>