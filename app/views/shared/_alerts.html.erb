<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Wim Vermeersch!", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Wim Vermeersch!", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Wim Vermeersch!", sticky: false) %>

<% end %>